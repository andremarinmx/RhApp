@model Rh.Models.Course

@{
    ViewBag.Title = "EditarCurso";
}

<h2>EditarCurso</h2>


@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Curso</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" hidden>
            @Html.LabelFor(model => model.ID_CURSO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_CURSO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ID_CURSO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" hidden>
            @Html.LabelFor(model => model.NOMBRE, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NOMBRE, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NOMBRE, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-md-3" for="Nombre">Nombre</label>
            <div class="col-md-9">
                <input class="form-control text-box single-line" id="nombre" name="nombre" required="required" type="text" />
            </div>
        </div>

        <div class="form-group" hidden>
            @Html.LabelFor(model => model.DURACION, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DURACION, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DURACION, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-md-3" for="Duración">Duración</label>
            <div class="col-md-9">
                <input class="form-control text-box single-line" id="duracion" name="duracion" required="required" type="number" />
            </div>
        </div>

        <div class="form-group" hidden>
            @Html.LabelFor(model => model.CALIFICACION_MIN, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CALIFICACION_MIN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CALIFICACION_MIN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-md-3" for="Calificación Mínima">Calificación Mínima</label>
            <div class="col-md-9">
                <input class="form-control text-box single-line" id="calificacion" name="calificacion" required="required" type="number" />
            </div>
        </div>

        <div class="form-group" hidden>
            @Html.LabelFor(model => model.TIPO_CURSO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TIPO_CURSO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TIPO_CURSO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-md-3" for="Tipo">Tipo</label>
            <div class="col-md-9">
                <select class="form-control" id="tipo" name="tipo" required="required">
                    <option>Interno</option>
                    <option>Externo</option>
                    <option>Otro</option>
                </select>
                <span class="field-validation-valid text-danger" data-valmsg-for="Tipo" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group" hidden>
            @Html.LabelFor(model => model.CLASIFICACION, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CLASIFICACION, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CLASIFICACION, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-md-3" for="Clasificación">Clasificación</label>
            <div class="col-md-9">
                <select class="form-control" id="clasificacion" name="clasificacion" required="required">
                    <option>Sin clasificación</option>
                    <option>Actitud</option>
                    <option>Diagnóstico</option>
                    <option>Externos</option>
                    <option>Habilidad</option>
                    <option>Otro</option>
                </select>
                <span class="field-validation-valid text-danger" data-valmsg-for="Clasificación" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group" hidden>
            @Html.LabelFor(model => model.AREA_TEMATICA, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
