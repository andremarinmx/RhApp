@using (Html.BeginForm("CrearInstructores", "Instructor"))
{
<div class="form-horizontal">
    <h1>Crear Instructor</h1>
    <h4 style="color:#0094ff;"><strong>Favor de introducir la información solicitada</strong></h4>
    <hr>
    <div class="form-group row">
        <label class="control-label col-md-3" for="Nombre">Nombre Completo</label>
        <div class="col-md-9">
            <input class="form-control text-box single-line" name="nombreCompleto" required="required" type="text" />
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-md-3" for="compania">Compañía</label>
        <div class="col-md-9">
            <input class="form-control text-box single-line" name="compania" required="required" type="text" />
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-md-3" for="stp">STP</label>
        <div class="col-md-9">
            <input class="form-control text-box single-line" name="stp" required="required" type="text" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-success">
        </div>
    </div>
</div>
}