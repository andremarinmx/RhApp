@model IEnumerable<Rh.Models.Empleado_Curso>

@{
    ViewBag.Title = "VerCursosEmpleado";
}

<h2>Cursos</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_EMPLEADO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_CURSO)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID_EMPLEADO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID_CURSO)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID_EMPLEADO_CURSO})
            @Html.ActionLink("Detalles", "Details", new { id = item.ID_EMPLEADO_CURSO })
            @Html.ActionLink("Eliminar", "EliminarCursoEmpleado", new { id = item.ID_EMPLEADO_CURSO })
        </td>
    </tr>
}

</table>
